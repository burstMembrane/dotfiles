#!/bin/bash

# this script is used to search gh for a repo and then show the readme in the terminal
fzf \
  --bind 'start:reload: gh repo ls' \
  --bind 'enter:become(echo {1})' \
  --header-lines 1 \
  --delimiter "\t" \
  --preview "gh repo view {1}" \
  --preview-window=right:60% \
  --delimiter='\t' \
  --with-nth=1
