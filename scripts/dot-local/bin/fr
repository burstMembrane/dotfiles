  --ansi \
  --tmux 90% \
  --preview-window=right:70% \
  --preview 'bat --color=always {2}' \
  --reverse \
  --with-nth 2.. \
  --bind "start:reload: fd -t f  | xargs stat -f '%a %N' | sort -nr | xargs -I{} basename {} " \
  --bind 'enter:become(nvim {2})' \
